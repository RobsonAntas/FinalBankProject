<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:id="@+id/actionLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/pagamento"
      android:textSize="18sp"
      android:textColor="@android:color/black"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <TextView
     android:id="@+id/textconta"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Conta:"
     android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <TextView
     android:id="@+id/textTitular"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Titular:"
     android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/titular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <TextView
        android:id="@+id/textuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        android:textColor="@android:color/black"/>
  <TextView
      android:id="@+id/cpf"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

   <TextView
       android:id="@+id/textBoleto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Boleto:"
     android:textColor="@android:color/black"/>
  <EditText
      android:id="@+id/boleto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textquantia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Valor:"/>
  <EditText
      android:id="@+id/quantia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <Button
      android:layout_gravity="center"
      android:id="@+id/btnPagar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Efetuar Pagamento"/>

  <LinearLayout
      android:visibility="invisible"
      android:id="@+id/layoutSenha"
      android:layout_gravity="center"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center"
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"/>

    <EditText
        android:layout_gravity="center"
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword" />
      </LinearLayout>
  <Button
      android:visibility="invisible"
      android:layout_gravity="center"
      android:id="@+id/confirma"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Confirma"/>

    <TextView
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/mensagemcomprovante"
        android:text="Comprovante"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/comprovante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>