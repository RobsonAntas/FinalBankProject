<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ExtratoActivity">

    <TextView
        android:id="@+id/extrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extrato"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textconta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conta:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textTitular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titular:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/cpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textquantia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debitado:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/quantia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textsaldoAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Antes da movimentacao:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/saldoAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textsaldoPosterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Antes da movimentacao:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/saldoPosterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textAtualizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Antes da movimentacao:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/atualizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>